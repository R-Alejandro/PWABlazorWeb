@using PWABlazorWeb.Shared

<div class="row">
    @if (Articulo != null)
    {
        <div class="col-8">
            <h3>@Articulo.Titulo</h3>
            <p style="font-size: 18px;">@Articulo.Contenido</p>
        </div>
        <div class="col">
            @if(Articulo.Imagen != null)
            {
                <img src=@Articulo.Imagen class="zoom">
            }
        </div>
    }else{
        <p>Renderizando contenido...</p>
    }

</div>


@code {
    [Parameter]
    public ArticleDto? Articulo { get; set;}

}